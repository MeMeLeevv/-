.item{
  height: 450rpx;
  position: relative;
  width: 100%;
  display: flex;
  flex: 1;
  
  flex-direction: column;

}
.cover{
  width: 100%;
}
.meta{
  display: inline-block;
    position: absolute;
  background-color: rgba(0, 0, 0,0.3);
  width: 100%;
  height: 450rpx;
  color: white;
  font-size: 12px;
}
.intro{
  font-size: 14px;
    font-weight: bold;
}
.bottom{
  height: 100rpx;
   position: absolute;
   bottom: 20rpx;
   left: 30rpx;
   display: flex;
   flex-direction: column;
   justify-content: space-around;
}
.header{
  width: 100%;
  height: 100rpx;
  text-align: center;
  position: relative;
}
.title{
  line-height: 100rpx;
}

.searchIcon{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  right: 0;
  top: 0;
}